{
	"name": "bluejay",
	"description": "A cross-platform test runner.",
	"copyright": "Copyright Â© 2017 Ryan Frame",
	"license": "MIT",
	"authors": [
		"Ryan Frame"
	],
	"dependencies": {
		"luad": "~master",
		"tested": "~>0.9.4"
	},
    "configurations": [
        {
            "name": "executable",
            "targetType": "executable"
        },
        {
            "name": "unittest",
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
            "excludedSourceFiles": ["source/app.d"],
            "postBuildCommands-windows": ["copy bluejay.exe bjtest\\"],
            "postBuildCommands-posix": ["cp bluejay ./bjtest/"]
        }
    ]
}
